{{#with project}}
<!DOCTYPE html>
<html>
<head>
<title> {{title}} | Jared Suasin</title>
<link href="/css/portfolio.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600" rel="stylesheet">
<link rel="stylesheet" href="fonts/stylesheet.css" type="text/css" charset="utf-8" />

</head>
<body>

<div class="pageContainer">
	
		
	<!-- Header -->
	<div class="headerContainer">
		<div class="nameContainer">
			<h1>JARED SUASIN.</h1>
		</div>

		<div class="tagContainer">
			<a class="tag1">Full Stack Designer</a>
			<a class="tag2">[ UX Engineering / UI Design / Visual Design ]</a>
		</div>

		<ul class="navBarContainer">
			<li><a class="notActive" href="/resume"><span>Resume</span></a></li>
			<li><a class="notActive" href="/about"><span>About</span></a></li>
			<li><a class="notactive" href="/"><span>Work</span></a></li>
		</ul>

	</div>

	
	<!-- Project content -->


	<!-- Cover photos -->
	{{#each covers}}
		<img class="{{class}}" src="{{src}}">
	{{/each}}

	<!-- Project description -->
	<div class="descriptionContainer">
		<p>{{description}}</p>

		<!-- Project information -->
		{{#each info}}
			<div class="infoContainer">
				<h4>{{title}}</h4>
				<p>{{content}}</p>
			</div>
		{{/each}}
	</div>

	<!-- Project blocks -->
	{{#each blocks}}
		<div class="block">
			<div class="blockContainer">
					
				<div class="blockTitle">
					<h3>{{title}}</h3>
				</div>

				<div class="blockContent">
				<!-- If text -->
				{{#if text}}
						<p>{{content}}</p>
				{{/if}}

				<!-- If image -->
				{{#if image}}
						<img class="{{class}}" src="{{src}}">
				{{/if}}
				{{#if caption}}
					{{{caption}}}
				{{/if}}

				<!-- If link -->
				{{#if link}}
						<p><a href={{linkurl}}>{{content}}</a></p>
				{{/if}}
				</div>
			</div>
		</div>
	{{/each}}

	<!-- footer -->
	<div class="footer">


	</div>
</div>

<script src="/js/portfolio.js"></script>

</body>
</html>
{{/with}}